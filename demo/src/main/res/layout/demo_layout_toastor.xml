<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="Toastor Demo"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/menu_item_shape"
        android:gravity="center"
        android:onClick="doNormalClick"
        android:text="默认"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/menu_item_shape"
        android:gravity="center"
        android:onClick="doLongClick"
        android:text="长时间"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/menu_item_shape"
        android:gravity="center"
        android:onClick="doShortClick"
        android:text="短时间"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_item_shape"
            android:gravity="center"
            android:onClick="doLeftClick"
            android:text="左"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_item_shape"
            android:gravity="center"
            android:onClick="doTopClick"
            android:text="上"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_item_shape"
            android:gravity="center"
            android:onClick="doRightClick"
            android:text="右"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_item_shape"
            android:gravity="center"
            android:onClick="doBottomClick"
            android:text="下"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_item_shape"
            android:gravity="center"
            android:onClick="doMiddleClick"
            android:text="中"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/menu_item_shape"
        android:gravity="center"
        android:onClick="doHideClick"
        android:text="立即消失"/>
</LinearLayout>